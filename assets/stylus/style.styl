.large
    font-size 14pt
    font-weight bold
.larger
    font-size 18pt
.highlighted
    color orangeColor
    font-weight bold
    display inline-block
.gold
    color darkHighlight
    display inline-block
    

/////////////////////////////////////////////////////////////////////////////
//////////////////////////////// link styling ///////////////////////////////
