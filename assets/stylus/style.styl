/////////////////////////////////////////////////////////////////////////////
//////////////////////////////// form styling ///////////////////////////////
/////////////////////////////////////////////////////////////////////////////


.formfield
    background-color inherit
.idlefield
    color lightHighlight
.focusfield
    color inherit
        
#tagsearchform
    display block
    marin none
    
#ideapastform
    display block
    margin none 
    
#hometagsearchform
    display block
    margin 0%
    float left
    margin-top 146px

#homeideapostform
    display block
    margin-right 66px
    float left
    
    
/////////////////////////////////////////////////////////////////////////////
/////////////////////////////// input styling //////////////////////////////
/////////////////////////////////////////////////////////////////////////////


input[type="button"]
    display block
    width 160px
    height 40px
    background-color darkHighlight
    color lightColor
    font-size 16pt
    border 0px
    margin-top 6px
    cursor pointer
        
input[type="button"]:hover
    background-color orangeColor //#85471D
    
input[type="button"]:focus
    outline none
    background-color orangeColor //#85471D
    
input[type="text"]
    display block
    border none
    border-left 1px solid darkHighlight
    border-bottom 1px solid darkHighlight
    background-color inherit
    width 290px
    margin 6px 0px 0px 0px
    font-size 12pt

input[type= "text"]:focus
    outline none
    
textarea
    display block
    border none
    border-left 1px solid darkHighlight
    border-bottom 1px solid darkHighlight
    background-color inherit
    width 290px
    margin 6px 0px 0px 0px
    resize none
    font-size 12pt
    
textarea:focus
    outline none


/////////////////////////////////////////////////////////////////////////////
////////////////////////// doublecolumn styling /////////////////////////////
/////////////////////////////////////////////////////////////////////////////


.doublecolumn input[type="text"]
    display block
    border none
    border-left 1px solid darkHighlight
    border-bottom 1px solid darkHighlight
    background-color inherit
    width 450px
    margin 6px 0px 0px 0px
    font-size 12pt
    
.doublecolumn textarea
    display block
    border none
    border-left 1px solid darkHighlight
    border-bottom 1px solid darkHighlight
    background-color inherit
    width 450px
    margin 6px 0px 0px 0px
    resize none
    font-size 12pt

.doublecolumn .text
    display block
    margin-left 56px
    

/////////////////////////////////////////////////////////////////////////////
//////////////////////////////// Navigation /////////////////////////////////
/////////////////////////////////////////////////////////////////////////////


#navwrap
    float right
    width 670px
    margin 0px 0px 0px 0px

.navlink
    float right
    cursor pointer
    text-decoration none
    font-weight bold
    color darkHighlight
    display inline-block
    margin 0px 20px 0px 20px
    padding 0px 0px 0px 0px
    
.activenavlink
    text-decoration underline
    
.fblink
    float right
    color #4869D8
    display inline-block
    margin 0px 20px 0px 20px
    text-decoration none
    font-weight bold
    cursor pointer
    
.activefblink
    text-decoration underline
